# Fetch the latest LTS version of node
# slim is required over alpine for glibc support in the ðŸ¤— transformers ONNX runtime
FROM node:25-slim

# Create server directory
WORKDIR /usr/src/server

# A wildcard is used to ensure both package.json AND package-lock.json are copied
# where available (npm@5+)
COPY package*.json ./
# No need to run crontab on that file
COPY jobs/node-cron /etc/cron.d/node-cron
# Typescript is the only dev dependency needed in production
RUN apt-get update && \
    apt-get install -y cron && \
    rm -rf /var/lib/apt/lists/* && \
    npm ci --omit=dev && \
    npm ci typescript && \
    npm cache clean --force

# Bundle app source
COPY . .

# Compile the build in the dist directory
RUN npm run build

# Run the node server on port 5000 and open the connection
# Start cron job in the foreground, output to stdout/stderr
EXPOSE $PORT
CMD [ "/bin/sh", "-c", "cron -f & npm run server" ]
